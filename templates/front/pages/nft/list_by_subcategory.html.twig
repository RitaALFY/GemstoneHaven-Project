{% extends 'front/base.html.twig' %}

{% block body %}

    <h1 class="my-5">
        {% if sub is defined %}
            {{ 'pages.nft.list_by.title'|trans({'%by_something%': sub.name }) }}
        {% endif %}
    </h1>

    <div class="row">
        {% for nft in nfts %}
            {% include 'front/partial/_nft_card.html.twig' with
                {
                    'nft': nft,
                }
            %}
        {% endfor %}
    </div>

{% endblock %}

{% block title %}
    {% if sub is defined %}
        {{ 'pages.nft.list_by.title'|trans({'%by_something%': sub.name}) }}
    {% endif %}
{% endblock %}

