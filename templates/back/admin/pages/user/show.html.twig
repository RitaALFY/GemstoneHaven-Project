{% extends 'back/base.html.twig' %}

{% block title %}

{% endblock %}


{% block body %}
    <div class="d-flex my-4">
        <a class="main-link my-auto me-3" href="{{ path('app_admin_user_index') }}">
            <i class="fa fa-arrow-left fa-2x"></i>
        </a>
        <h1>{{ 'back.pages.user.show.title'|trans({'%user%': user.lastName }) }}</h1>
        <a class="main-link my-auto ms-5"
           href="{{ path('app_admin_user_edit', {'id': user.id}) }}"
           title=""{{ 'back.pages.user.edit.title'|trans }}"
        >
        <i class="fa fa-pen fa-2x"></i>
        </a>
    </div>
<div class="row">
    <div class="col-4">
        <div class="container-image-nft-show">
            <img src="{{ user.image }}" style="width: 300px; height: 400px;">

        </div>
    </div>
    <div class="col-8">
        <table class="table table-dark table-striped">
            <tbody>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.id'|trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.Email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.Roles'|trans }}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.Password'|trans }}</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.id'|trans }}</th>
                <td>{{ user.lastName }} {{ user.firstName }}</td>
            </tr>

            <tr>
                <th>{{ 'back.pages.user.index.table.header.Gender'|trans }}</th>
                <td>{{ user.gender ? 'F' : 'M' }}</td>
            </tr>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.BirthAt'|trans }}</th>
                <td>{{ user.birthAt ? user.birthAt|date('d-m-Y')  }}</td>
            </tr>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.address'|trans }}</th>
                <td>Pays: {{ user.address.country }} <br> Ville: {{ user.address.city }} <br> Rue: {{ user.address.street }} </td>

            </tr>
        </tbody>
    </table>

