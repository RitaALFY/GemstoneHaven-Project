{% extends 'back/base.html.twig' %}
{% block title %}
    {#    {{ 'back.pages.user.index.title'|trans }}#}
{% endblock %}
{% block body %}
    <div class="d-flex my-4">
        <h1>{{ 'back.pages.user.index.title'|trans }}</h1>
        <a class="main-link my-auto ms-5"
           href="{{ path('app_admin_user_new') }}"
           title="{{ 'back.pages.user.new.title'|trans }}"
        >
            <i class="fa fa-plus-circle fa-2x"></i>
        </a>
    </div>

    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
                <th>{{ 'back.pages.user.index.table.header.id'|trans }}</th>
                <th>{{ 'back.pages.user.index.table.header.Email'|trans }}</th>
                <th>{{ 'back.pages.user.index.table.header.Roles'|trans }}</th>
                <th>{{ 'back.pages.user.index.table.header.Password'|trans }}</th>
                <th>{{ 'back.pages.user.index.table.header.name'|trans }}</th>
                <th>{{ 'back.pages.user.index.table.header.Gender'|trans }}</th>
                <th>{{ 'back.pages.user.index.table.header.BirthAt'|trans }}</th>
                <th>{{ 'back.pages.user.index.table.header.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td> {{ user.lastName }} {{ user.firstName }}</td>

                <td>{{ user.gender ? 'F' : 'M' }}</td>
                <td>{{ user.birthAt ? user.birthAt|date('d-m-Y') }}</td>

                <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_new') }}">Create new</a>
{% endblock %}
