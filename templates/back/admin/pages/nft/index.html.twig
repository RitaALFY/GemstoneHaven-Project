{% extends 'back/base.html.twig' %}

{% block title %}
{#    {{ 'back.pages.nft.index.title'|trans }}#}
{% endblock %}

{% block body %}

<div class="d-flex my-4">
    <h1>{{ 'back.pages.nft.index.title'|trans }}</h1>
    <a class="main-link my-auto ms-5"
       href="{{ path('app_admin_n_f_t_new') }}"
       title="{{ 'back.pages.nft.new.title'|trans }}"
    >
        <i class="fa fa-plus-circle fa-2x"></i>
    </a>
</div>





    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
                <th>{{ 'back.pages.nft.index.table.header.id'|trans }}</th>
                <th>{{ 'back.pages.nft.index.table.header.name'|trans }}</th>
                <th>{{ 'back.pages.nft.index.table.header.drop_at'|trans }}</th>

                <th>{{ 'back.pages.nft.index.table.header.AvailableQuantity'|trans }}</th>
                <th>{{ 'back.pages.nft.index.table.header.CurrentValue'|trans }} </th>
                <th>{{ 'back.pages.nft.index.table.header.action'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for n_f_t in n_f_ts %}
            <tr>
                <td>{{ n_f_t.id }}</td>
                <td>{{ n_f_t.name }}</td>
                <td>{{ n_f_t.dropAt ? n_f_t.dropAt|date('d-m-Y')}}</td>
                <td>{{ n_f_t.availableQuantity }}</td>
                <td>{{ n_f_t.currentValue }}</td>
                <td>
                    <div class="d-flex">
                        <a class="main-link my-auto me-2 center"
                    href="{{ path('app_admin_n_f_t_show', {'slug': n_f_t.slug}) }}" title="{{ 'back.pages.nft.show.title'|trans }}" ><i class="fa fa-eye"></i></a>
                    <a class="main-link ms-2 my-auto" href="{{ path('app_admin_n_f_t_edit', {'slug': n_f_t.slug}) }}" title="{{ 'back.pages.nft.edit.title'|trans }}"><i class="fa fa-pen"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{#    <a href="{{ path('app_admin_n_f_t_new') }}">Create new</a>#}
{% endblock %}
